{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile&run",
            "type": "shell",
            "command": "g++",
            "args": [
                "-O2",
                "-Wall",
                "-std=c++11",
                "-o",
                "run.exe",
                "main.cpp",
                "./src/Shaders.cpp",
                "./src/Camera.cpp",
                "./src/VertexBuffer.cpp",
                "./src/ElemBuffer.cpp",
                "./src/VertexArray.cpp",
                "./src/Texture.cpp",
                "-lglu32",
                "-lglew32",
                "-lglfw3",
                "-lgdi32",
                "-lsoil",
                "-lassimp",
                "-lopengl32",
                "-mconsole",
                "&&",
                "./run"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "test",
            "type": "shell",
            "command": "g++",
            "args": [
                "-Wall",
                "-std=c++11",
                "-g",
                "-o",
                "run.exe",
                "main.cpp",
                "./src/Shaders.cpp",
                "./src/Camera.cpp",
                "./src/VertexBuffer.cpp",
                "./src/ElemBuffer.cpp",
                "./src/VertexArray.cpp",
                "./src/Texture.cpp",
                "-lglu32",
                "-lglew32",
                "-lglfw3",
                "-lgdi32",
                "-lsoil",
                "-lassimp",
                "-lopengl32",
                "-mconsole"
            ],
            "group": "test"
        }
    ]
}